<% friend = User.find(friend_request.user_id) %>
<%= turbo_frame_tag dom_id(friend),
    data: { controller: 'friend' } do %>
  <div class="card">
    <div class="card-header">
      <a href="/users/<%=friend_request.id%>" data-turbo="false"><%=friend.last_name%> <%=friend.first_name%></a>
    </div>
    <div class="card-body">
      <%= friend.email %>
    </div>
    <div class="card-footer">
      <a class="btn btn-danger denyFriend" data-turbo="false" data-id="<%=friend.id %>" href="#">Remove friend</a>
    </div>
  </div>
<% end %>