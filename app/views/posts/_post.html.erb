<div class="card post">
    <div class="card-header">
        <% if post && post.title %>
        <div class="card-title">
            <%= link_to post.title, controller: "posts", action: "show", id: post.id %>
        </div>
        <% end %>
    </div>
    <div class="card-body">
        <div class="card-subtitle mb-2 text-body-secondary">
        <%= link_to post.creator.email, controller: "users", action: "show", id: post.creator.id %>
        </div>
        <% if post && post.content %>
        <div class="card-text">
            <%= post.content %>
        </div>
        <% end %>
        <% if post %>
            <% tags = PostsCategory.where(post: post).all %>
            <% if tags %>
                <% tags.each do |tag| %>
                    <% current_hashtag = Category.find(tag.id).name %>
                    <%= link_to current_hashtag, controller: "categories", action: "show", id: current_hashtag %>
                <% end %>
            <% end %>
        <% end %>
    </div>
    <div class="card-footer">
        <%= post.created_at %>
    </div>
</div>