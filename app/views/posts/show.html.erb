<div class="bg-white shadow rounded overflow-hidden">
    <div class="px-4 pt-0 pb-4 bg-dark">
        <div class="media align-items-end profile-header">
            <div class="profile mr-3">

            </div>
            <div class="media-body mb-5 text-white">
                <h1 class="pt-4 mb-0"><%= @post.title %></h1>
                <a href="/posts/" class="btn btn-dark btn-sm btn-block" data-turbo="false">All posts</a>
            </div>
        </div>
    </div>

    <div class="bg-light p-4 d-flex justify-content-end text-center">
        <ul class="list-inline mb-0">
            <li class="list-inline-item">
                <div class="font-weight-bold mb-0 h5 d-block"><%= @post.created_at.strftime('%d.%m.%Y %H:%M') %></div>
                <small class="text-muted"> <i class="fa fa-picture-o mr-1"></i>Created</small>
            </li>
            <% if @post.updated_at != @post.created_at %>
            <li class="list-inline-item">
                <div class="font-weight-bold mb-0 h5 d-block"><%= @post.updated_at.strftime('%d.%m.%Y %H:%M') %></div>
                <small class="text-muted"> <i class="fa fa-picture-o mr-1"></i>Updated</small>
            </li>
            <% end %>
        </ul>
    </div>

    <div class="py-4 px-4">
        <div class="py-4">
        <%= @post.content %>
        </div>
    </div>
</div>