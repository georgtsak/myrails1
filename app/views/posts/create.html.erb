<section class="default-section posts">
    <div class="container">
    <h2>Create a new post</h2>

    <div class="posts-form">
      <%= form_for :post do |f| %>
        <fieldset>
          <div class="field mb-3">
            <%= f.label :title, class: 'form-label' %><br />
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        
          <div class="field mb-3">
            <%= f.label :content, class: 'form-label' %><br />
            <%= f.text_area :content, class: 'form-control post-content', rows: '3' %>
          </div>
          
          div class="field mb-3">
            <%= f.label :categories, class: 'form-label' %><br />
            <%= select_tag('categories[]', options_from_collection_for_select(Category.all, :id, :name), {:class => 'select-tags', :multiple => 'multiple', :style => 'width: 100%'}) %>
          </div><
        
          <div class="actions">
            <%= f.submit "Create!", class: 'btn btn-default btn-success' %>
          </div>
        </fieldset>
      <% end %>
    </div>
    </div>
</div>