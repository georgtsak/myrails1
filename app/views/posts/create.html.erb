<section class="default-section posts">
    <div class="container">
    <h2>Create a new post</h2>

    <%= form_for :post do |f| %>    
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>
    
      <div class="field">
        <%= f.label :content %><br />
        <%= f.text_area :content %>
      </div>
    
      <div class="actions">
        <%= f.submit "Create!" %>
      </div>
    <% end %>
    </div>
</div>