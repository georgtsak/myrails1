<div class="bg-white shadow rounded overflow-hidden">
    <div class="px-4 pt-0 pb-4 bg-dark">
        <div class="media align-items-end profile-header">
            <div class="profile mr-3">

            </div>
            <div class="media-body mb-5 text-white">
                <h1 class="pt-4 mb-0">Create a new post</h1>
                <a href="/posts/" class="btn btn-dark btn-sm btn-block">All posts</a>
            </div>
        </div>
    </div>

    <div class="py-4 px-4">
      <div class="row">
        <div class="col-lg-6">
          <div class="py-4">
          <%= form_for :post do |f| %>
            <fieldset>
              <div class="field mb-3">
                <%= f.label :title, class: 'form-label' %><br />
                <%= f.text_field :title, class: 'form-control' %>
              </div>
            
              <div class="field mb-3">
                <%= f.label :content, class: 'form-label' %><br />
                <%= f.text_area :content, class: 'form-control post-content', rows: '3' %>
              </div>
              
              <div class="field mb-3">
                <%= f.label :categories, class: 'form-label' %><br />
                <%= select_tag('categories[]', options_from_collection_for_select(Category.all, :name, :name), {:class => 'select-tags', :multiple => 'multiple', :style => 'width: 100%'}) %>
              </div>
            
              <div class="actions">
                <%= f.submit "Create!", class: 'btn btn-default btn-success' %>
              </div>
            </fieldset>
          <% end %>
          </div>
        </div>
      </div>
    </div>
</div>