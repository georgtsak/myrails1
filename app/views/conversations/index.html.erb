<h1>Messages page</h1>
<button class="btn btn-success mb-2" data-bs-toggle="modal" data-bs-target="#createConvModal">New conversation</button>
<% if @elements %>
<div class="row">
  <div class="col-lg-6">
    <ol class="list-group">
    <% @elements.each do |element| %>
      <%= render partial: 'conversation', :locals => {:element => element} %>
    <% end %>
    </ol>
  </div>
</div>
<% else %>
No conversations yet
<% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="createConvModal" tabindex="-1" aria-labelledby="createConvModalLabel" aria-hidden="true">
<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-header">
      <div class="modal-title h1 fs-5" id="createConvModalLabel">Create conversation</div>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <%= form_for :conversation, :id => 'createConversationForm' do |f| %>
        <div class="field mb-3">
          <%= f.label :name, class: 'form-label' %><br />
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="field mb-3">
          <%= f.label :friends, class: 'form-label' %><br />
          <%= select_tag('users[]', options_from_collection_for_select([], :id, :email), {:class => 'select-friends', :multiple => true, :style => 'width: 100%'}) %>
        </div>

        <%= f.submit "Create", class: 'btn btn-default btn-primary btn-block' %>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
</div>

<script>
$(window).on('load', function() {
  function formatFriend (friend) {
    var $friend = $(
      '<span>' + friend.email + ': ' + friend.last_name + " " + friend.first_name + '' + '</span>'
    );
    return $friend;
  };

  $(".select-friends").select2({
    templateResult: formatFriend,
    templateSelection: formatFriend,
    multiple: true,
    tags: false,
    delay: 400,
    dropdownParent: $('#createConvModal'),
    ajax: {
      url: '/friends/list',
      dataType: 'json',
      data: function (params) {
        var query = {
          search: params.term
        }
        return query
      },
      processResults: function (data) {
        return {
          results: data.data
        };
      },
      cache: true
    }
  })

  $('#createConversationForm').on('submit', function(event) {
    event.preventDefault()

    const formValues = $('#createConversationForm').serializeArray()
    let values = {}

    for (let i = 0; i < formValues.length; i++) {
      if (formValues[i].name === 'conversation[name]') {
        values['conversation'] = {}
        values.conversation.name = formValues[i].value
      }
    }

    delete values['users[]']
    values['user'] = {}
    values['user']['ids'] = []
    const realUsers = $(".select-friends").select2('data')

    for (let i = 0; realUsers.length > i; i++) {
      values['user']['ids'].push(realUsers[i]['id'])
    }

    request = $.ajax({
      url: "/messages/createconv",
      type: "POST",
      data: JSON.stringify(values),
      contentType: "application/json; charset=utf-8",
      headers: {
        "X-CSRF-Token": values['authenticity_token']
      },
      beforeSend(xhr) {
        xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))
      }
    })

    request.done(function (response, textStatus, jqXHR){
        console.log(response)
    })
  })
})
</script>