<%= form_with(model: friend, url: friends_new_path, remote: true, method: :post ) do |f| %>
    <%= f.hidden_field :id, value: friend.id %>
    <%= f.submit defined?(btntext) ? btntext : "Add a friend", data: { disable_with: false }, class: defined?(btnclass) ? btnclass : "btn btn-success" %>
<% end %>