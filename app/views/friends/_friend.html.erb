<%= turbo_frame_tag dom_id(friend), class: 'col-lg-4',
    data: { controller: 'friend' } do %>
  <div class="card friend">
    <div class="card-header">
      <a href="/users/<%=friend.id%>" data-turbo="false"><%=friend.last_name%> <%=friend.first_name%></a>
    </div>
    <div class="card-body">
      <%= friend.email %>
    </div>
    <div class="card-footer">
      <%= render 'deny', friend: friend, btntext: 'Remove a friend' %>
    </div>
  </div>
<% end %>