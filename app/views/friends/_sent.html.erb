<%= turbo_frame_tag dom_id(sent), class: 'col-lg-4',
    data: { controller: 'friend' } do %>
  <div class="card friend">
    <div class="card-header">
      <a href="/users/<%=sent.id%>" data-turbo="false"><%=sent.last_name%> <%=sent.first_name%></a>
    </div>
    <div class="card-body">
      <%= sent.email %>
    </div>
    <div class="card-footer">
      Sent at: <%=sent.created_at%>
    </div>
  </div>
<% end %>