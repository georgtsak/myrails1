<%= form_with(url: defined?(searchlink) ? searchlink : posts_path, method: :get, data: {turbo_frame: "posts"}) do |f| %>
    <%= f.text_field :last_name, class: 'form-control', value: @search_last_name_value, placeholder: "last_name" %>
    <%= f.text_field :first_name, class: 'form-control', value: @search_first_name_value, placeholder: "first name" %>
    <%= f.text_field :email, class: 'form-control', value: @search_email_value, placeholder: "email" %>
    <%= f.submit "Search", data: { disable_with: false }, class: "btn btn-primary" %>
    <a class="btn btn-danger" href="<%=defined?(returnlink) ? returnlink : posts_path%>">Reset</a>
<% end %>